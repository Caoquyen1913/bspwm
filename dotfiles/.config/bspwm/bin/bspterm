#!/usr/bin/env bash

# launch alacritty with bspwm config
if [ "$1" == "-f" ]; then
	alacritty --class 'alacritty-float,alacritty-float' --config-file ~/.config/bspwm/alacritty/alacritty.yml -o window.opacity=0.65
else
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -o window.opacity=0.65
fi
